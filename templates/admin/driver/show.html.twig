{% extends 'base.html.twig' %}

{% block title %}Driver{% endblock %}

{% block body %}
    <h1>Driver</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ driver.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ driver.firstname }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ driver.biography }}</td>
            </tr>
            <tr>
                <th>Years_of_experience</th>
                <td>{{ driver.yearsOfExperience }}</td>
            </tr>
            <tr>
                <th>Languages</th>
                <td>{{ driver.languages }}</td>
            </tr>
            <tr>
                <th>Special_trainging</th>
                <td>{{ driver.specialTrainging ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('driver_index') }}">back to list</a>

    <a href="{{ path('driver_edit', {'id': driver.id}) }}">edit</a>

    {{ include('driver/_delete_form.html.twig') }}
{% endblock %}
